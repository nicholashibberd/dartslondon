<h1>Pubs</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pubs.each do |pub| %>
      <tr>
        <td><%= link_to(pub.name, pub) %></td>
        <td><%= pub.description %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Show', pub, class: 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_pub_path(pub), class: 'btn btn-default' %></td>
        <td><%= link_to 'Destroy', pub, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pub', new_pub_path, class: 'btn btn-default' %>
